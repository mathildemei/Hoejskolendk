---
const {
  url = "/destination",
  cardimage = "",
  cardimagalt = "",
  cardimagbg = "",
  cardimagbghover = "",
  holdnavn = "",
} = Astro.props;
---

<section
  class="group relative w-full max-w-sm mx-auto bg-white shadow-md overflow-hidden rounded-lg"
  style="background-color: ${cardimagbg};"
>
  <!-- Background with hover effect -->
  <div
    class="absolute inset-0 transition-transform duration-300 ease-in-out"
    style="background-color: ${cardimagbghover}; z-index: -1;"
  >
  </div>

  <!-- Main Image -->
  <a href={url} class="block">
    <img
      src={cardimage}
      alt={cardimagalt}
      class="w-full h-64 object-cover transition-transform duration-300 group-hover:scale-105"
    />
  </a>

  <!-- Card Content -->
  <div class="p-4 text-center">
    <h3 class="text-base font-semibold text-gray-700">{holdnavn}</h3>
  </div>
</section>
